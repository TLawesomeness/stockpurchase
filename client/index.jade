doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Stock Purchase App
    link(rel='stylesheet', href='/style.css')
  body
    h1 Buy Stocks
    
    .container
      .row
        #left
          .col-md-6.leftcol
            h3 Buy stocks
            input#symbolInput(type='text' placeholder='input symbol')
            input#numShares(type='number' placeholder='share amount')
            button#buyStock Buy
            #stockData    
        
        #right  
          .col-md-6.rightcol
            h3 Balance amount
            input#cashInput(type='number' placeholder='input amount')
            button#addCash(type='button') Add Cash
            #cashData.text-center
              span#sum Current Balance: 0
              #Position
              span#totalPos Total Position: 0
                
              #Assets
              span#totalAsset Total Assets: 0
                      
    script(src='/vendor/jquery/dist/jquery.js')
    script(src='/main.js')
